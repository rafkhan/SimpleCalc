<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    
    <LinearLayout 
    	android:id="@+id/linearLayout1" 
    	android:orientation="vertical" 
    	android:layout_width="fill_parent" 
    	android:layout_height="fill_parent">
    	
        <LinearLayout 
        	android:layout_weight="1" 
        	android:layout_height="wrap_content" 
        	android:layout_width="fill_parent"
        	android:id="@+id/linearLayout5">
        	
        	<TextView
        		android:id="@+id/inputField"
        		android:layout_weight="1"
        		android:textColor="#FFFFFF"
        		android:textSize="16pt"
        		android:layout_height="fill_parent"
        		android:layout_width="fill_parent" 
        		android:gravity="center_vertical|center_horizontal|right"/>
        		
        	<Button
     			android:textSize="8pt"	
        		android:background="#000000"
        		android:textColor="#FFFFFF"
        		android:layout_weight="2"
     			android:layout_height="fill_parent"
     			android:layout_width="fill_parent"
     			android:text="CLR"
     			android:onClick="bCLR" />
        	
        </LinearLayout>
        	
        <LinearLayout 
        	android:textSize="20pt"
        	android:layout_width="fill_parent" 
        	android:id="@+id/linearLayout2" 
        	android:orientation="horizontal" 
        	android:layout_height="wrap_content" 
        	android:layout_weight="2">
        	
        	<Button
        		android:textSize="15pt"
        		android:background="#000000"
        		android:textColor="#FFFFFF"
        		android:layout_weight="4"
     			android:layout_height="fill_parent"
     			android:layout_width="fill_parent"
     			android:text="7"
     			android:onClick="b7" />
     			
     		<Button
     			android:textSize="15pt"
     			android:background="#000000"
        		android:textColor="#FFFFFF"
        		android:layout_weight="4"
     			android:layout_height="fill_parent"
     			android:layout_width="fill_parent"
     			android:text="8"
     			android:onClick="b8" />
     			
     		<Button
     			android:textSize="15pt"
     			android:background="#000000"
        		android:textColor="#FFFFFF"
        		android:layout_weight="4"
     			android:layout_height="fill_parent"
     			android:layout_width="fill_parent"
     			android:text="9"
     			android:onClick="b9" />
     			
     		<Button
     			android:textSize="15pt"
     			android:background="#000000"
        		android:textColor="#FFFFFF"
        		android:layout_weight="4"
     			android:layout_height="fill_parent"
     			android:layout_width="fill_parent"
     			android:text="+"
     			android:onClick="bAdd" />
        	
        </LinearLayout>
        
        <LinearLayout
        	android:textSize="20pt"
        	android:layout_height="wrap_content" 
        	android:layout_width="fill_parent" 
        	android:id="@+id/linearLayout3" 
        	android:orientation="horizontal" 
        	android:layout_weight="3">
        	
        	<Button
        		android:textSize="15pt"
        		android:background="#000000"
        		android:textColor="#FFFFFF"
        		android:layout_weight="4"
     			android:layout_height="fill_parent"
     			android:layout_width="fill_parent"
     			android:text="4"
     			android:onClick="b4" />
     			
     		<Button
     			android:textSize="15pt"
     			android:background="#000000"
        		android:textColor="#FFFFFF"
        		android:layout_weight="4"
     			android:layout_height="fill_parent"
     			android:layout_width="fill_parent"
     			android:text="5"
     			android:onClick="b5" />
     			
     		<Button
     			android:textSize="15pt"
     			android:background="#000000"
        		android:textColor="#FFFFFF"
        		android:layout_weight="4"
     			android:layout_height="fill_parent"
     			android:layout_width="fill_parent"
     			android:text="6"
     			android:onClick="b6" />
     			
     		<Button
     			android:textSize="15pt"
     			android:background="#000000"
        		android:textColor="#FFFFFF"
        		android:layout_weight="4"
     			android:layout_height="fill_parent"
     			android:layout_width="fill_parent"
     			android:text="-"
     			android:onClick="bSub" />
        	
        </LinearLayout>
        
        <LinearLayout
        	android:textSize="20pt"
        	android:layout_height="wrap_content" 
        	android:layout_width="fill_parent" 
        	android:id="@+id/linearLayout4" 
        	android:orientation="horizontal" 
        	android:layout_weight="3">
        	
        	<Button
        		android:textSize="15pt"
        		android:background="#000000"
        		android:textColor="#FFFFFF"
        		android:layout_weight="4"
     			android:layout_height="fill_parent"
     			android:layout_width="fill_parent"
     			android:text="1"
     			android:onClick="b1" />
     			
     		<Button
     			android:textSize="13pt"
     			android:background="#000000"
        		android:textColor="#FFFFFF"
        		android:layout_weight="4"
     			android:layout_height="fill_parent"
     			android:layout_width="fill_parent"
     			android:text="2"
     			android:onClick="b2" />
     			
     		<Button
     			android:textSize="13pt"
     			android:background="#000000"
        		android:textColor="#FFFFFF"
        		android:layout_weight="4"
     			android:layout_height="fill_parent"
     			android:layout_width="fill_parent"
     			android:text="3"
     			android:onClick="b3" />
     			
     		<Button
     			android:textSize="13pt"
     			android:background="#000000"
        		android:textColor="#FFFFFF"
        		android:layout_weight="4"
     			android:layout_height="fill_parent"
     			android:layout_width="fill_parent"
     			android:text="*"
     			android:onClick="bMul" />
        	
        </LinearLayout>
        
        <LinearLayout
        	android:layout_height="wrap_content" 
        	android:layout_width="fill_parent" 
        	android:id="@+id/linearLayout4" 
        	android:orientation="horizontal" 
        	android:layout_weight="3">
        	
        	<Button
        		android:textSize="13pt"
        		android:background="#000000"
        		android:textColor="#FFFFFF"
        		android:layout_weight="4"
     			android:layout_height="fill_parent"
     			android:layout_width="fill_parent"
     			android:text="0"
     			android:onClick="b0" />
     			
     		<Button
     			android:textSize="13pt"		
        		android:background="#000000"
        		android:textColor="#FFFFFF"
        		android:layout_weight="4"
     			android:layout_height="fill_parent"
     			android:layout_width="fill_parent"
     			android:text="."
     			android:onClick="bDec" />
     			
     		<Button
     			android:textSize="13pt"		
        		android:background="#000000"
        		android:textColor="#FFFFFF"
        		android:layout_weight="4"
     			android:layout_height="fill_parent"
     			android:layout_width="fill_parent"
     			android:text="+/-"
     			android:onClick="bNeg" />
     			
     		<Button
     			android:textSize="13pt"	
        		android:background="#000000"
        		android:textColor="#FFFFFF"
        		android:layout_weight="4"
     			android:layout_height="fill_parent"
     			android:layout_width="fill_parent"
     			android:text="="
     			android:onClick="bEql" />
     			
     		<Button
     			android:textSize="13pt"	
        		android:background="#000000"
        		android:textColor="#FFFFFF"
        		android:layout_weight="4"
     			android:layout_height="fill_parent"
     			android:layout_width="fill_parent"
     			android:text="/"
     			android:onClick="bDiv" />
     			
    	</LinearLayout>
    </LinearLayout>   
</LinearLayout>